#!/usr/bin/env bash

# Obtain node adresses
IPADDR=$(hostname -I)
# Get only our network address
IPADDR=${IPADDR#*"192.168.12."}
# Get only last 3 digits of IP address
IPADDR=${IPADDR:0:3}

# Remove first 3 characters from APP_DIR string to get the app name
APP_DIR=$APP
APP_NAME=${APP_DIR:3}
echo "Testing $APP_NAME application on node $IPADDR"


# Start the ECMS_client
cd /root/logatec-experiment/monitoring/
python3 experiment_LGTC.py $IPADDR $APP_DIR $APP_NAME

# Move logs to a results folder
mv *.log /root/logatec-experiment/results/

# Measurements will be moved by experiment application, so next line is odveƒç
#mv *.txt /root/logatec-experiment/results/

